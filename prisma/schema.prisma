generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int    @id @default(autoincrement())
  nome         String
  email        String @unique
  senha        String
  departamento String
  tipo         String

  userAdm UserAdm[]
}

model UserAdm {
  id Int @id @default(autoincrement())
  user User @relation(fields: [id_user], references: [id])
  id_user Int @unique
}